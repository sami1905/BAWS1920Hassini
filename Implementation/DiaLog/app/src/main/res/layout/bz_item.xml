<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorAccent"
        android:paddingBottom="0.5dp"
        android:paddingTop="0.5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/text_uhrzeit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:text="17:33"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:fontFamily="@font/josefin_sans_light"
                android:layout_gravity="center"
                android:gravity="center"/>

            <TextView
                android:id="@+id/text_bz"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:text="96"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:fontFamily="@font/josefin_sans_light"
                android:layout_gravity="center"
                android:gravity="center"/>

            <TextView
                android:id="@+id/text_be"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:text="4.5"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:fontFamily="@font/josefin_sans_light"
                android:layout_gravity="center"
                android:gravity="center"/>

            <TextView
                android:id="@+id/text_korrektur"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:text="-"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:fontFamily="@font/josefin_sans_light"
                android:layout_gravity="center"
                android:gravity="center"/>

            <TextView
                android:id="@+id/text_insulin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:text="9.0"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:fontFamily="@font/josefin_sans_light"
                android:layout_gravity="center"
                android:gravity="center"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:background="@color/colorPrimary">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:text="Uhr"
                android:textSize="10dp"
                android:textColor="@color/white"
                android:fontFamily="@font/josefin_sans_light"
                android:layout_gravity="center"
                android:gravity="center"/>

            <TextView
                android:id="@+id/text_bz_unit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:text="mg/dL"
                android:textSize="10dp"
                android:textColor="@color/white"
                android:fontFamily="@font/josefin_sans_light"
                android:layout_gravity="center"
                android:gravity="center"/>

            <TextView
                android:id="@+id/text_kh_unit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:text="BE"
                android:textSize="10dp"
                android:textColor="@color/white"
                android:fontFamily="@font/josefin_sans_light"
                android:layout_gravity="center"
                android:gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:text="Korrektur-IE"
                android:textSize="10dp"
                android:textColor="@color/white"
                android:fontFamily="@font/josefin_sans_light"
                android:layout_gravity="center"
                android:gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:text="IE-Gesamt"
                android:textSize="10dp"
                android:textColor="@color/white"
                android:fontFamily="@font/josefin_sans_light"
                android:layout_gravity="center"
                android:gravity="center"/>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>